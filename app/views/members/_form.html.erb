<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row-fluid">
    <div class="span6">
      <div class="field">
        <label>Nome Completo</label><br/>
        <%= f.text_field :name, rows:"50" %>
      </div>
      <div class="field">
        <label>Número de Sócio</label><br/>
        <%= f.text_field :member_number %>
      </div>
      <div class="field">
        <label>Número de Aluno</label><br/>
        <%= f.text_field :student_number %>
      </div>
      <div class="field">
        <label>Email</label><br/>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <label>Número de Telemóvel</label><br/>
        <%= f.text_field :phone %>
      </div> 
    </div>
    <div class="span6">
      <div class="field">
        <label>Data de Nascimento</label><br/>
        <%= f.text_field :birthday, value: @member.clean_birthday ,data: {behaviour: 'datepicker'} %>
      </div>
      <div class="field">
        <label>Conselho</label><br/>
        <%= f.collection_select :location_id, Location.all, :id, :name %>
      </div>
      <div class="field">
        <label>Curso</label><br/>
        <%= f.collection_select :course_id, Course.all, :id, :name %>
      </div>
      <div class="field">
        <label>Responsável</label><br/>
        <%= f.collection_select :responsible_id, Member.all, :id, :name %>
      </div>
      <div class="field">
        <label>Pago</label><br/>
        <%= f.check_box :paid %>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit class:"btn btn-success btn-large", value:"Submeter" %>
    <%= link_to members_path do %>
      <button class="btn btn-large">Voltar</button>
    <% end %>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('[data-behaviour~=datepicker]').datepicker();
  })
</script>
